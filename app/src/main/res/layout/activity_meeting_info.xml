<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.danil.asus.lab3.MeetingInfoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:id="@+id/tv_lb_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        android:layout_alignBottom="@+id/tv_lb_title"
        android:layout_toEndOf="@+id/tv_lb_title"
        android:layout_alignTop="@+id/tv_lb_title"
        android:textSize="15dp"
        android:layout_alignStart="@+id/tv_discription"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/tv_lb_description"
        android:layout_below="@+id/tv_lb_title"
        android:layout_alignParentStart="true"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_discription"
        android:layout_alignBottom="@+id/tv_lb_description"
        android:layout_toEndOf="@+id/tv_lb_description"
        android:textSize="15dp"
        android:layout_alignStart="@+id/tv_priority"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start date"
        android:id="@+id/tv_lb_start_date"
        android:layout_below="@+id/tv_lb_description"
        android:layout_alignParentStart="true"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_start_date"
        android:layout_alignBottom="@+id/tv_lb_start_date"
        android:layout_alignEnd="@+id/tv_discription"
        android:textSize="15dp"
        android:layout_alignStart="@+id/tv_priority"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End date"
        android:id="@+id/tv_lb_end_date"
        android:layout_below="@+id/tv_lb_start_date"
        android:layout_alignParentStart="true"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_end_date"
        android:layout_alignBottom="@+id/tv_lb_end_date"
        android:textSize="15dp"
        android:layout_alignEnd="@+id/tv_start_date"
        android:layout_alignStart="@+id/tv_priority"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Priority"
        android:id="@+id/tv_lb_proirity"
        android:layout_below="@+id/tv_lb_end_date"
        android:layout_alignParentStart="true"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_priority"
        android:layout_alignBottom="@+id/tv_lb_proirity"
        android:layout_toEndOf="@+id/tv_lb_participants"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Participants "
        android:id="@+id/tv_lb_participants"
        android:layout_below="@+id/tv_lb_proirity"
        android:layout_alignParentStart="true"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_participants"
        android:layout_alignBottom="@+id/tv_lb_participants"
        android:layout_toEndOf="@+id/tv_lb_participants"
        android:textSize="15dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:id="@+id/btn_accept"
        android:layout_below="@+id/tv_lb_participants"
        android:layout_toEndOf="@+id/tv_lb_title"
        android:layout_marginTop="46dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove"
        android:id="@+id/btn_remove"
        android:layout_alignTop="@+id/btn_accept"
        android:layout_alignEnd="@+id/tv_participants"
        android:layout_marginEnd="50dp"/>

</RelativeLayout>
