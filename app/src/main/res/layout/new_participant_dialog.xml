<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

    <EditText
        android:id="@+id/et_new_fio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/et_new_post"
        android:layout_toEndOf="@+id/tv_new_fio"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tv_new_fio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_new_fio"
        android:layout_alignParentStart="true"
        android:text="Fio"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/et_new_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/et_new_fio"
        android:layout_toEndOf="@+id/tv_new_post"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tv_new_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_new_post"
        android:layout_alignParentStart="true"
        android:text="Post"
        android:textSize="20dp"/>
</RelativeLayout>